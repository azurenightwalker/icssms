<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/wrapper"
    android:background="?attr/background_sms_drawable"
    android:orientation="vertical">
<LinearLayout android:layout_width="fill_parent"
    android:baselineAligned="false"
    android:layout_height="wrap_content">
    <RelativeLayout 
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight=".75" >
        <ImageView
            android:id="@+id/photo"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/ic_contact_picture"
            android:layout_marginRight="5dip"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/contactPhoto"/>
	    <TextView
	        android:id="@+id/messageTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/photo"
	        android:textSize="14sp"
	        android:layout_marginRight="5dip"
	        android:textColor="?attr/android:textColorSecondary"
	        android:gravity="right"/>
	    <TextView
	        android:id="@+id/messageContent"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:paddingBottom="5dip"
	        android:textSize="14sp"
	        android:textColor="?attr/android:textColorSecondary"
	        android:layout_marginRight="5dip"
	        android:layout_below="@id/messageTime"
	        android:layout_toLeftOf="@id/photo"
	        android:autoLink="web"
	        android:gravity="right"/>
	    <ImageView 
            android:id="@+id/messageStatus"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@android:drawable/ic_lock_idle_lock"
            android:layout_marginRight="5dip"
            android:contentDescription="@string/messageStatus"
            android:layout_toLeftOf="@id/messageTime"
            android:visibility="gone"/>
	    <ImageView 
            android:id="@+id/messageDelivered"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@android:drawable/presence_online"
            android:layout_marginRight="5dip"
            android:contentDescription="@string/messageStatus"
            android:layout_toLeftOf="@id/messageTime"
            android:visibility="gone"/>
	    <ImageView 
            android:id="@+id/messageNotSent"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@android:drawable/ic_dialog_alert"
            android:layout_marginLeft="5dip"
            android:contentDescription="@string/messageStatus"
            android:layout_toLeftOf="@id/messageTime"
            android:visibility="gone"/>
    </RelativeLayout>
           </LinearLayout> <View android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/divider"/>
</LinearLayout>